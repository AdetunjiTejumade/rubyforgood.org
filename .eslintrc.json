{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "all"],
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "no-console": "off"
  }
}
